---
import { Image } from "astro:assets";

const { name, date, location, cover, link } = Astro.props;
const formattedDate = new Date(date).toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<a
  href={`/events/${link}`}
  class="bg-card flex flex-col md:flex-row gap-6 border border-muted shadow-sm hover:shadow-md transition group"
>
  {
    cover && (
      <Image
        src={cover}
        alt={"cover"}
        width={256}
        height={192}
        class="w-full md:w-64 h-48 object-contain"
        format="webp"
        loading="lazy"
        quality={5}
      />
    )
  }

  <div class="flex flex-col justify-between p-4">
    <div>
      <h2 class="text-2xl font-semibold group-hover:text-primary">
        {name}
      </h2>
      {location && <p class="mt-2 text-muted-foreground">{location}</p>}
    </div>
    <span class="mt-4 text-sm text-muted-foreground">
      {formattedDate}
    </span>
  </div>
</a>
