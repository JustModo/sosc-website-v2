---
import Layout from "@/layouts/Layout.astro";
import Hero from "@/components/Hero.astro";
import Cover from "@/assets/cover/event.jpg";
import { getCollection } from "astro:content";
import slugify from "slugify";
import EventCard from "@/components/events/EventCard.astro";

const events = await getCollection("events");

const parsedEvents = events
  .map(({ data }) => ({
    name: data.name,
    date: data.date,
    location: data.location,
    cover: data.cover,
    link: slugify(data.name, { lower: true, strict: true }),
  }))
  .sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime());
---

<Layout>
  <Hero
    image={Cover}
    title="Our Events"
    subtitle="Explore upcoming and past events hosted by our community."
  />

  <section
    class="py-16 bg-background text-foreground px-4 md:px-8 max-w-7xl mx-auto"
  >
    <div class="grid gap-8 grid-cols-1 lg:grid-cols-2">
      {parsedEvents.map((event) => <EventCard {...event} />)}
    </div>
  </section>
</Layout>
